<?php

function nightcat_page_attachments_alter(array &$attachments) {
  $viewport = [
    '#type' => 'html_tag',
    '#tag' => 'meta',
    '#attributes' => [
      'name' => 'viewport',
      'content' => 'width=device-width, initial-scale=1, viewport-fit=cover',
    ],
  ];
  $attachments['#attached']['html_head'][] = [$viewport, 'viewport'];
}
